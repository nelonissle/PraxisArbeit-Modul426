<Window x:Class="WPFWordListApp.LecturePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecture Page" Height="450" Width="800">
    <Grid Background="#D1C4">
        <!-- Top Bar -->
        <DockPanel Background="#E0E0E0" Height="50" VerticalAlignment="Top">
            <ComboBox Width="150" Height="30" Margin="10" VerticalAlignment="Center"
                      HorizontalAlignment="Left" SelectedIndex="0">
                <ComboBoxItem Content="Französisch" />
                <ComboBoxItem Content="Deutsch" />
            </ComboBox>
            <TextBlock Text="Sprache" VerticalAlignment="Center" Margin="170,0,0,0" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button Content="Alle lernen" Width="100" Height="30" Margin="5"
                        Background="#D1C4" Foreground="White" />
                <Button Content="1 Lektion lernen" Width="130" Height="30" Margin="5"
                        Background="#D1C4" Foreground="White" />
            </StackPanel>
        </DockPanel>

        <!-- Lecture Cards -->
        <WrapPanel Margin="20,70,20,20" HorizontalAlignment="Center" VerticalAlignment="Top">
            <!-- Lecture 1 -->
            <Border Background="#6200EE" Width="150" Height="100" CornerRadius="10" Margin="10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Wörter: 5" Foreground="White" FontSize="14" TextAlignment="Center" />
                    <TextBlock Text="Lecture 1" Foreground="White" FontSize="18" TextAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Lecture 2 -->
            <Border Background="#D1C0" Width="150" Height="100" CornerRadius="10" Margin="10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Wörter: 5" Foreground="White" FontSize="14" TextAlignment="Center" />
                    <TextBlock Text="Lecture 2" Foreground="White" FontSize="18" TextAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Lecture 3 -->
            <Border Background="#D1C6" Width="150" Height="100" CornerRadius="10" Margin="10">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Wörter: 5" Foreground="White" FontSize="14" TextAlignment="Center" />
                    <TextBlock Text="Lecture 3" Foreground="White" FontSize="18" TextAlignment="Center" />
                </StackPanel>
            </Border>
        </WrapPanel>
    </Grid>
</Window>
