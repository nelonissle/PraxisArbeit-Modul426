<Window x:Class="EasyWords.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyWords"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#D1C4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="30" FontWeight="Bold" Foreground="Blue" Margin="10">
               Willkommen zu Easy Word
            </TextBlock>
            <Button Content="Start" Width="250" Height="60" Background="Gray" Foreground="White" FontSize="16" FontWeight="Bold" 
                    BorderBrush="#388E3C" BorderThickness="2" Margin="10" Padding="10" 
                    Click="NavigateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
